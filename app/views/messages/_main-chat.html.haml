.MainChat
  .RightHeader
    .RightHeader__group
      .RightHeader__group-name
        = @group.name
      %ul.RightHeader__member-list
        Memberï¼š
        %li.RightHeader__member
          - @group.users.each do |user|
            = user.name
    %a.RightHeader__edit-btn(href="edit")
      Edit
  .MessageField
    = render @messages
  .RightFooter
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__contents
        = f.text_field :content, class: 'Form__input-contents', placeholder: 'type a message'
        = f.label :image, class: 'Form__input-img' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'Form__submit'